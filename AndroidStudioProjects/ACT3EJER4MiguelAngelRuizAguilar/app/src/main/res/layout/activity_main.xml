<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        app:title="Selecciona tu Videojuego"
        app:titleTextColor="@android:color/white">

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            android:padding="16dp"
            android:layout_gravity="end"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardGame1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="6dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivGame1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/imagen1"
                android:scaleType="centerCrop"
                android:contentDescription="Juego 1" />

            <TextView
                android:id="@+id/tvGame1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resident Evil 2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvGame1Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un emocionante juego de supervivencia"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnSelectGame1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seleccionar"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"/>

                <ImageButton
                    android:id="@+id/btnFavoriteGame1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/btn_star_big_off"
                    android:contentDescription="Añadir a Favoritos"/>

                <ImageButton
                    android:id="@+id/btnShareGame1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:contentDescription="Compartir Juego"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardGame2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="6dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardGame1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivGame2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/imagen2"
                android:scaleType="centerCrop"
                android:contentDescription="Juego 2" />

            <TextView
                android:id="@+id/tvGame2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just cause "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvGame2Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un increíble juego de aventura"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnSelectGame2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seleccionar"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"/>

                <ImageButton
                    android:id="@+id/btnFavoriteGame2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/btn_star_big_off"
                    android:contentDescription="Añadir a Favoritos"/>

                <ImageButton
                    android:id="@+id/btnShareGame2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:contentDescription="Compartir Juego"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardGame3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="6dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardGame2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivGame3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/imagen3"
                android:scaleType="centerCrop"
                android:contentDescription="Juego 3" />

            <TextView
                android:id="@+id/tvGame3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street Fighter 10"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvGame3Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un fantastico juego de peleas."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnSelectGame3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seleccionar"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"/>

                <ImageButton
                    android:id="@+id/btnFavoriteGame3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/btn_star_big_off"
                    android:contentDescription="Añadir a Favoritos"/>

                <ImageButton
                    android:id="@+id/btnShareGame3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:contentDescription="Compartir Juego"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/hijo1"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#19E400"/>
    <RelativeLayout
        android:id="@+id/hijo2"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/hijo1"
        android:background="#FF4918"/>
    <RelativeLayout
        android:id="@+id/hijo3"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="#00F4FF"/>
    <RelativeLayout
        android:id="@+id/hijo4"
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:layout_below="@id/hijo2"
        android:background="#A1FF00"/>
    <RelativeLayout
        android:id="@+id/hijo5"
        android:layout_width="150dp"
        android:layout_height="330dp"
        android:layout_below="@id/hijo4"
        android:layout_alignParentBottom="true"
        android:background="#FF6500"/>
    <RelativeLayout
        android:id="@+id/hijo6"
        android:layout_width="260dp"
        android:layout_height="330dp"
        android:layout_alignTop="@id/hijo5"
        android:layout_toRightOf="@+id/hijo5"
        android:background="#0BB4FF"/>

</RelativeLayout>